<Window x:Class="ClientLourd.MVVM.View.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientLourd.MVVM.View"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="450" Width="800">
        <Grid>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Nom}" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Prenom}" FontSize="16"/>
                        <TextBlock Text="{Binding TelephoneFixe}" FontSize="16"/>
                        <TextBlock Text="{Binding TelephonePortable}" FontSize="16"/>
                        <TextBlock Text="{Binding Email}" FontSize="16"/>
                        <TextBlock Text="{Binding Prenom}" FontSize="16"/>
                        <TextBlock Text="{Binding Prenom}" FontSize="16"/>
                        <TextBlock Text="{Binding Prenom}" FontSize="16"/>
                        <Button Content="Fermer" Click="OnCloseClick"/>
                </StackPanel>
        </Grid>
</Window>
